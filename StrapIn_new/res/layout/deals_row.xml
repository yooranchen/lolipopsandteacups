<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_bg"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/box_bg"
    android:gravity="center|left"
    android:orientation="horizontal" >

    <snowmada.main.view.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
         android:src="@drawable/bmw_car"
        app:border_color="#ffffff"
        app:border_width="1dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.35"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/deals_title_layout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_product_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="BMW"
                android:textColor="#2cb7ff"
                android:textSize="15sp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_address"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Kolkata,West Bengal"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/deals_cost_layout"
            android:layout_below="@+id/deals_title_layout"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since"
            android:textColor="#8a8a8a"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/deals_cost_layout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

          
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost:"
                    android:textColor="#2cb7ff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/lbl_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$50.00"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
           

              
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Savings:"
                        android:textColor="#2cb7ff"
                        android:layout_marginLeft="10dp"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/lbl_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5.00"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
               
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>