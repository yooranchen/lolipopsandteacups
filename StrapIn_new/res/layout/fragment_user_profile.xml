<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_transparent_bg"
    android:layout_below="@+id/ll_page_title"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/ll_edit_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:layout_marginTop="3dp"
        android:background="#aeaeae"
        android:gravity="center|right"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/btn_profile_edit"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/button_upload"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_details"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/ll_edit_button_layout"
        android:layout_centerHorizontal="true"
        android:background="#aeaeae"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:padding="1dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#aeaeae"
                android:orientation="vertical"
                android:padding="2dp" >

                <snowmada.main.view.CircleImageView
                    android:id="@+id/profile_page_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/test"
                    app:border_color="#000000"
                    app:border_width="1dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: "
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_age"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                       
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Location: "
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_location"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_prof_location_edit_save"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/save" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                       
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Fav Mountain: "
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_fev_mountain"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_prof_fav_mountain_edit_save"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/save" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                       
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Shred Style: "
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_shred_style"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_details"
        android:layout_below="@+id/user_details"
        android:background="#aeaeae"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_about_me"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll3"
        android:layout_below="@+id/ll3"
       android:background="#aeaeae"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_prof_about_me"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_prof_about_me_edit_save"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center|right"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_edit_fav_mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/save" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_title_deals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_about_me"
        android:background="#202020"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_title_deals"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#aeaeae"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_details"
                android:layout_below="@+id/user_details"
                android:text="Recent Deals"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_latest_deals"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/ll_title_deals"
            android:layout_below="@+id/ll_title_deals"
            android:background="#aeaeae"
            android:gravity="center"
            android:paddingRight="10dp" >

            <Gallery
                android:id="@+id/gv_deals_images"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:spacing="3dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_latest_deals"
            android:layout_below="@+id/ll_latest_deals"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/test_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Gallery"
                android:textColor="#2cb7ff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/test_t1"
                android:text=" Details"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_upload_img"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_upload"
                android:drawableLeft="@drawable/upload_icon"
                android:gravity="center|right"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="Upload"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--
 <GridView
            android:id="@+id/gv_gallery_images"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             android:layout_alignLeft="@+id/ll5"
            android:layout_below="@+id/ll5"
            android:layout_marginTop="2dp"
            android:alwaysDrawnWithCache="true"
            android:clipChildren="true"
            android:columnWidth="100dp"
            android:gravity="center_horizontal"
            android:horizontalSpacing="4dp"
            android:numColumns="4"
            android:padding="0dp"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" >
        </GridView>
        -->

        <GridView
            android:id="@+id/gv_gallery_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll5"
            android:layout_marginTop="5dp"
            android:cacheColorHint="@null"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </RelativeLayout>

</RelativeLayout>